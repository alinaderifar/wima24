# ==============================================================================
# LaraClassifier Production Environment Configuration
# ==============================================================================
# Location: deployment/env/.env.production
#
# This template is for Docker + Coolify deployment.
# Coolify will inject database and Redis connection details automatically.
#
# NEVER commit this file with real credentials to version control!
#
# Usage:
#   1. Copy this file to Coolify environment variables
#   2. Fill in the placeholder values
#   3. Coolify will inject DB_* and REDIS_* variables
#
# ==============================================================================

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------

APP_NAME="LaraClassifier"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://YOUR_DOMAIN.com

# Asset URL (if using CDN)
# ASSET_URL=https://cdn.YOUR_DOMAIN.com

# ------------------------------------------------------------------------------
# Coolify-Injected Database Configuration
# ------------------------------------------------------------------------------
# Coolify automatically injects these variables when you link a database.
# Do NOT hardcode these values - Coolify will provide them.
#
# DB_HOST=laraclassifier-db (Docker service name)
# DB_PORT=3306
# DB_DATABASE=laraclassifier
# DB_USERNAME=laraclassifier
# DB_PASSWORD=<injected-by-coolify>
# ------------------------------------------------------------------------------

DB_CONNECTION=mysql
# DB_HOST, DB_PORT, DB_DATABASE, DB_USERNAME, DB_PASSWORD are injected by Coolify

# ------------------------------------------------------------------------------
# Coolify-Injected Redis Configuration
# ------------------------------------------------------------------------------
# Coolify automatically injects these variables when you link Redis.
# Do NOT hardcode these values - Coolify will provide them.
#
# REDIS_HOST=laraclassifier-redis (Docker service name)
# REDIS_PORT=6379
# REDIS_PASSWORD=<injected-by-coolify>
# ------------------------------------------------------------------------------

REDIS_CLIENT=predis
# REDIS_HOST, REDIS_PORT, REDIS_PASSWORD are injected by Coolify

# Redis database indices
REDIS_CACHE_DB=0
REDIS_QUEUE_DB=1
REDIS_SESSION_DB=2

# ------------------------------------------------------------------------------
# Cache & Queue
# ------------------------------------------------------------------------------

CACHE_STORE=redis
CACHE_PREFIX=laraclassifier_

QUEUE_CONNECTION=redis

# ------------------------------------------------------------------------------
# Session Configuration
# ------------------------------------------------------------------------------

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict
SESSION_ENCRYPT=false
SESSION_PARTITIONED=false

# ------------------------------------------------------------------------------
# Broadcasting
# ------------------------------------------------------------------------------

BROADCAST_CONNECTION=redis

# ------------------------------------------------------------------------------
# Filesystem Configuration
# ------------------------------------------------------------------------------

# Default filesystem disk (local, public, s3)
FILESYSTEM_DISK=public

# AWS S3 Configuration (if using S3)
# AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
# AWS_DEFAULT_REGION=eu-central-1
# AWS_BUCKET=your-bucket-name
# AWS_URL=https://your-bucket-name.s3.eu-central-1.amazonaws.com
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ------------------------------------------------------------------------------
# Mail Configuration
# ------------------------------------------------------------------------------

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=postmaster@YOUR_DOMAIN.com
MAIL_PASSWORD=YOUR_MAIL_PASSWORD_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@YOUR_DOMAIN.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun (alternative)
# MAILGUN_DOMAIN=YOUR_DOMAIN.com
# MAILGUN_SECRET=YOUR_MAILGUN_SECRET

# Postmark (alternative)
# POSTMARK_TOKEN=YOUR_POSTMARK_TOKEN

# ------------------------------------------------------------------------------
# Logging Configuration
# ------------------------------------------------------------------------------

LOG_CHANNEL=daily
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Slack logging (optional)
# LOG_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ------------------------------------------------------------------------------
# Queue Worker Settings
# ------------------------------------------------------------------------------

QUEUE_FAILED_DRIVER=database-uuids

# ------------------------------------------------------------------------------
# Horizon (if using Laravel Horizon)
# ------------------------------------------------------------------------------

# HORIZON_ENABLED=true

# ------------------------------------------------------------------------------
# Sanctum API Authentication
# ------------------------------------------------------------------------------

SANCTUM_STATEFUL_DOMAINS=YOUR_DOMAIN.com

# ------------------------------------------------------------------------------
# Passport API Authentication (if using)
# ------------------------------------------------------------------------------

# PASSPORT_PRIVATE_KEY=
# PASSPORT_PUBLIC_KEY=

